ion-view(ng-controller="PlayerCtrl as controller")
	ion-content.padding
		ng-switch(on="controller.showPlayer")
			div(ng-switch-when="true") 
				videogular(vg-theme="controller.theme", 
					vg-player-ready="controller.onPlayerReady($API)", 
					vg-complete="controller.onCompleteItem()", 
					class="videogular-container audio" 
					vg-auto-play="controller.autoplay")
					vg-media(vg-src="controller.sources", vg-type="audio")
					vg-controls
						vg-scrub-bar
							vg-scrub-bar-current-time
						vg-volume
							vg-mute-button
							vg-volume-bar
				button(ng-click="controller.nextSong()") next song
				button(ng-click="controller.addSongs()") add songs
				br
				br
				br
			div(ng-switch-default) 
				p {{controller.showPlayer}}
				p There aren't any songs in your playlist.
				button(ng-click="controller.addSongs()") add songs
