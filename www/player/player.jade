ion-view
	ion-content.gradient

		div(ng-controller="CountdownCtrl")
			ng-switch(on="showCountdown")
				div(ng-switch-when="true")
					.countdown-container
						timer(ng-attr-countdown="startTime" interval="1000" finish-callback="finished()"){{hours}}:{{minutes}}:{{seconds}}
						br
						p until the music starts

		ng-switch(on="showPlayer")

			//if the player has songs in it
			.padding.center-text.player-view(ng-switch-when="true")

				//the player	
				videogular(vg-theme="playerServices.theme", 
					vg-player-ready="playerServices.onPlayerReady($API)", 
					vg-complete="playerServices.onCompleteItem()", 
					class="videogular-container audio" 
					vg-auto-play="playerServices.autoplay")
					vg-media(vg-src="playerServices.sources", vg-type="audio")
				
				br
				br
				br
				img.cover-art(src="{{playerServices.trackCover}}")
				p
					strong {{playerServices.trackTitle}}
					br
					| {{playerServices.trackUser}}
				
				br
				a.button.button-dark(ui-sref="channel.mediapicker") Add songs
				//a.button.button-full.button-dark(ui-sref="channel.playlist") Modify the playlist
				br
				br
				button.button.button-clear(ng-click="nextSong()")  Skip this song
				br
					
			//if the player is empty

			br
			//.card.padding.center-text(ng-switch-default)
				br
				h3.title Oh, wait.
				p There's no song in this playlist.
				br
			.row 
				.col.col-10
				.col.col-80
					.card.padding.center-text
						br
						p You can suggest music from your Soundcloud likes while waiting.
						br
						a.button.button-dark(ui-sref="channel.mediapicker") Add songs!
				.col.col-10
