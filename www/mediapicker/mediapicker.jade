ion-view(view-title="")
	ion-nav-buttons(side="secondary")
	ion-header-bar.bar.bar-subheader.miniplayer(ng-show="song_added")
		p.padding Song added to the playlist!
	ion-content.has-header

		ion-list(class="list")
			ion-item(ng-repeat="source in sc track by $index")
				
				.item-content.item-button-right.item-thumbnail-left
					img.padding(src="{{source.artwork_url}}")
					p Title: "{{source.title}}" 
					p Artist: "{{source.user.username}}"
					p Duration: "{{source.duration}}"
					button.button.button-clear(ng-click="mediapicker_actionsheet(source)")
						i.icon.ion-more