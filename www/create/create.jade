ion-view(view-title="")
	ion-content
		p
		.row
		.row.row-center
			.col
				.list.list-inset
					label.item.item-input.padding
						input(type="text", placeholder="What do you want to call you channel?", ng-model="channelName")
					button.button.button-positive.button-full(ng-click="create_channel(channelName)", ng-init="channelName=random_name") Create {{channelName}}
		.row.row-center
			.col
				.list.list-inset
					label.item.item-input.padding(ng-controller="CountdownCtrl")
						input(type="time", ng-model="startTime", placeholder="HH:mm")
					button.button.button-positive.button-full(ng-click="create_channel(channelName)", ng-init="channelName=random_name") Create {{channelName}}

