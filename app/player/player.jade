ion-view(view-title='room_name')
	ion-content.padding
		br
		br
		br
		p(ng-controller="PlayerCtrl as controller")
			videogular(vg-theme="controller.theme", vg-player-ready="controller.onPlayerReady($API)", class="videogular-container audio" vg-autoplay="controller.autoplay")
				vg-media(vg-src="controller.sources", vg-type="audio")
				vg-controls
					vg-play-pause-button
					vg-scrub-bar
						vg-scrub-bar-current-time
					vg-volume
						vg-mute-button
						vg-volume-bar
					vg-fullscreen-button