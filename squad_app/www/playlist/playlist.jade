ion-view(view-title="Playlist")
	ion-content
		button.button(ng-click="#") Add songs from Soundcloud
		ion-list(class="list")
			ion-item(class="item", ng-repeat="source in sc track by $index")
				button(ng-click="add_to_playlist(source)") Add
				p Title: "{{source.title}}" 
				p Artist: "{{source.user.username}}"
				p Duration: "{{source.duration}}"